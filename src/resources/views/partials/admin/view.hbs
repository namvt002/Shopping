<div class="row">
  <div class="col-6">
    <h1>Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="admin/addproduct" type="button" class="btn btn-primary align-self-center">+ Add Product</a>
  </div>
</div>


<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Product Image</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each this}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.product_name}}</td>
      <td><img src="image/product_img/{{this.product_image}}"  class="rounded mx-auto d-block" style="width: 10rem;" alt=""></td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td class="text-center">
        {{!-- <a href="admin/viewproduct/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a> --}}
        <a href="/admin/editproduct/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="admin/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>